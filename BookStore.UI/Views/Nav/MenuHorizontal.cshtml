@model IEnumerable<string>
    <div class="btn-group btn-group-sm btn-group-justified">
        @Html.ActionLink("All Categories", "List", "Book", null,
    new { @Class = "btn btn-default btn-sm" })

        @foreach (var link in Model)
        {
            @Html.RouteLink(link, new { controller = "Book", action = "List", category = link, page = 1 },
    new { @Class = "btn btn-default btn-sm" + ((link == ViewBag.category) ? "btn-primary" : "").ToString() })
        }
    </div>
